# Server Configuration
PORT=5000
NODE_ENV=development

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/rizzlet

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Groq API (for Llama models)
GROQ_API_KEY=your-groq-api-key-here

# Google Vision API (optional, for OCR fallback)
GOOGLE_VISION_API_KEY=your-google-vision-api-key-here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Usage Quotas
FREE_TIER_DAILY_LIMIT=50
FREE_TIER_MONTHLY_LIMIT=1000
